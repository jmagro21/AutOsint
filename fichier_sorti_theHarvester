#LE CODE A AJOUTER 
import os 

#Récupération des adresses e-mail avec theHarvester 
cmd = "theharvester -d dnscan -b all -l 500 -f results.html" 

#lecture des résultats de theHarvester dans un fichier texte 
with open("result.html) as f: 
  content = f.readlines()
  
#Filtrage des lignes contenant des adresses e-mail: 
emails = [line for line in content if "@" in line] 

#Ecriture des adresses e-mail dans fichier texte 
with open ("emails.txt", "w") as f: 
  for email in emails: 
    f.write(email) 
    
#LE CODE DE RAPHAEL
 def tri_result_harvester(): 
  fichier_result = open('theHarvesterResult/OutputHarvester', 'r')
  lignes = fichier_result.Readlines()
  for ligne in lignes : 
    print(ligne) 
